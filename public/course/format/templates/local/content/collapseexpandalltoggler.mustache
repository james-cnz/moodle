{{!
    @template core_courseformat/local/content/collapseexpandalltoggler

    Displays the expand/collapse all sections toggler in the page header.

    Example context (json):
    {
    }
}}
<div class="d-flex">
    <a id="collapsesections"
        class="section-collapsemenu v-hidden"
        href="#"
        aria-expanded="true"
        role="button"
        data-toggle="toggleall"
    >
        <span class="collapseall text-nowrap">{{#str}}collapseall{{/str}}</span>
        <span class="expandall text-nowrap">{{#str}}expandall{{/str}}</span>
    </a>
</div>
